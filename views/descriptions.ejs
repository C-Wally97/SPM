<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
<head>
  <script src="scripts.js"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="main.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet"> 
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Document</title>
</head>
<body>
  <nav id="nav_main">
    <div class="nav-wrapper">
      <a href="#!" class="brand-logo left">SPM</a>
      <ul class="right hide-on-med-and-down">
        <li class="active"><a href="">Descriptions</a></li>
        <li><a href="/parts">Parts</a></li>
        <li><a href="/series">Series</a></li>
      </ul>
    </div>
  </nav>
<a class="waves-effect waves-light btn modal-trigger" href="#myModal">Add a Description</a>
<% if (data.message) { %>
  <p class="red-text"><%= data.message %></p>
<% } %>
<div id="myModal" class="modal">
<div id="addDesc_Wrapper">
  <form class="col s12" action="/addDesc" method="POST">
    <p>Add a Description</p>
    <div class="row">
      <label for="xQM_No">xQM No</label>
      <input name="xQM_No" id="xQM_No" type="number" class="validate">
    </div>
    <div class="row">
      <label for="Series_No">Series No</label>
      <input name="series_No" id="series_No" type="number" class="validate">
    </div>
    <div class="row">
      <label for="models">Models</label>
      <input name="models" id="models" type="text" class="validate">
    </div>
    <div class="row">
      <label for="symptoms">Symptoms</label>
      <textarea name="symptoms" id="symptoms" class="materialize-textarea"></textarea>
    </div>
    <div class="row">
      <label for="failure_Desc">Description of Failure</label>
      <textarea name="failure_Desc" id="failure_Desc" class="materialize-textarea"></textarea>
    </div>
    <div class="row">
      <label for="technician">Assigned to</label>
      <input name="technician" id="technician" type="text" class="validate">
    </div>
    <div class="row">
      <div class="switch">
        <label for="closed">Issue state</label>
        <label>
          Closed
          <input name="closed" type="checkbox" id="closed">
          <span class="lever"></span>
          Open
        </label>
      </div>
    </div>
    <div class="row">
      <label for="fault_Type">Fault Type</label>
      <input name="fault_Type" id="fault_Type" type="text" class="validate">
    </div>
    <div class="row">
      <label for="date_Raised">Date Raised</label>
      <input name="date_Raised" id="date_Raised" type="text" class="datepicker">
    </div>
    <div class="file-field input-field">
      <div class="btn">
        <span>File</span>
        <input type="file">
      </div>
      <div class="file-path-wrapper">
        <label for="img_Loc">Image Location</label>
        <input name="img_Loc" id="img_Loc" class="file-path validate" type="text">
      </div>
    </div>
    <button class="waves-effect waves-light btn" id="descButton" type="submit">Add Description</button>
  </form>
</div>
</div>
  <table id="desc_table" class="highlight" class="container">
    <tbody>
      <tr><th>id</th><th>xQM_No</th><th>Series_No</th><th>Models</th><th>Symptoms</th><th>Description of Failure</th><th>Technician</th><th>Closed</th><th>Date Raised</th><th>Img Location</th><th>Fault Type</th><th></th></tr>
    </tbody>
    </table>


</body>
<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</html>
