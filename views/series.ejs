<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
<head>
  <script src="series.js"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="main.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet"> 
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Series</title>
</head>
<body>
  <nav id="nav_main">
      <a href="#!" class="brand-logo left">SPM</a>
      <div class="brand-logo center"> <a class="waves-effect waves-light btn modal-trigger" id="addSeries" href="#myModal">Add Series</a></div>
      <ul class="right hide-on-med-and-down">
        <li><a href="/descriptions">Descriptions</a></li>
        <li><a href="/parts">Parts</a></li>
        <li class="active"><a href="">Series</a></li>
      </ul>
  </nav>
  <body id="sideNav-wrapper">
    <!-- left navigation panel -->
  <div id="card-wrapper" class="row">
    <div class="col s12 m12">
      <div class="card darken-1">
        <div class="card-title center-align black-text">Filters</div>
        <div class="card-content black-text" id="filter-content">
          <div class="row">
            <label for="series_filter">Series No</label>
            <input name="Series" id="series_filter" type="text">
          </div>
          <div class="row">
            <label for="description_filter">Description</label>
            <input name="Description" id="description_filter" type="text">
          </div>
          <div class="row">
            <label for="product_filter">Product Group</label>
            <input name="Product_group" id="product_filter" type="text">
          </div>
          <div class="row">
            <label for="power_filter">Power Type</label>
            <input name="Power_type" id="power_filter" type="text">
          </div>
        </div>
        <div class="card-action">
          <button class="waves-effect btn" id="filterButton">Filter</button>
        </div>
      </div>
    </div>
  </div>
  </body>
  <main>
  <div id="main-wrapper">
<% if (data.message) { %>
  <p class="red-text"><%= data.message %></p>
<% } %>

  <table id="content_table" class="highlight" class="container">
    <tbody>
      <tr><th>Series No</th><th>Description</th><th>Product Group</th><th>Power Type</th></tr>
    </tbody>
    </table>
    <div id="myModal" id="modal_wrapper" class="modal">
      <div id="modal_Wrapper">
        <form id="seriesForm" class="col s12" action="/addSeries" method="POST">
          <div class="row">
            <label for="series_No">Series No</label>
            <input name="series_No" id="series_No" type="text">
          </div>
          <div class="row">
            <label for="description">Description</label>
            <input name="description" id="description" type="text">
          </div>
          <div class="row">
            <label for="product_Group">Product Group</label>
            <input name="product_Group" id="product_Group" type="text">
          </div>
          <div class="row">
            <label>Product Group</label>
            <select name="power_Type" id="power_Type" class="select" id="Sent_to_Manufacture">
                <option value="Electric">Electric</option>
                <option value="Petrol">Petrol</option>
                <option value="Battery">Battery</option>
                <option value="Generic">Generic</option>
            </select>
         </div>
          <button id="seriesButton" class="waves-effect waves-light btn" type="submit">Add Series</button>
        </form> 
      </div>
    </div>
  </div>
</main>
</body>
<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</html>
