<!DOCTYPE html>
<html lang="en">
<head>
    <script src="parts.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="main.css">
    <title>Parts</title>
</head>
  <body>
    <nav id="nav_main">
        <a href="#!" class="brand-logo left">SPM</a>
        <div class="brand-logo center"><a class="waves-effect waves-light btn modal-trigger" id="addPart" href="#myModal">Add a Part</a></div>
        <ul class="right hide-on-med-and-down">
          <li><a href="/descriptions">Descriptions</a></li>
          <li  class="active"><a href="">Parts</a></li>
          <li><a href="/series">Series</a></li>
        </ul>
    </nav>
    <body id="sideNav-wrapper">
      <!-- left navigation panel -->
    <div id="card-wrapper" class="row">
      <div class="col s12 m12">
        <div class="card darken-1">
          <div class="card-title center-align black-text">Filters</div>
          <div class="card-content black-text" id="filter-content">
            <div class="row">
            <label for="xQM_filter">xQM No</label>
            <input name="xQM_No" id="xQM_filter" type="text" class="validate">
            </div>
            <div class="row">
            <label for="warranty_filter">Warranty No</label>
            <input name="Warranty_No" id="warranty_filter" type="text">
          </div>
            <div class="row">
            <label for="saleDate_filter">Date of Sale</label>
            <input name="date_of_sale" id="saleDate_filter" type="text" class="datepicker">
          </div>
            <div class="row">
            <label for="failDate_filter">Date of Failure</label>
            <input name="date_of_failure" id="failDate_filter" type="text" class="datepicker">
          </div>
            <div class="row">
              <label for="partNo_filter">Part No</label>
              <input name="Part_number" id="partNo_filter" type="text" class="validate">
          </div>
            <div class="row">
              <label>Sent to Manufacture</label>
              <select name="sent_to_manufacture" class="select" id="sent_filter">
                  <option value="">N/A</option>
                  <option value=false>No</option>
                  <option value=true>Yes</option>
              </select>
          </div>
            <div class="row">
            <label for="date_raised">Date Raised</label>
            <input name="date_raised" id="dateRaised_filter" type="text" class="datepicker">
          </div>
          </div>
          <div class="card-action">
            <button class="waves-effect btn" id="filterButton">Filter</button>
          </div>
        </div>
      </div>
    </div>
   </body>
    <main>
    <div id="main-wrapper">
    <% if (data.message) { %>
      <p class="red-text"><%= data.message %></p>
    <% } %>
    <div id="myModal" class="modal">
        <div id="modal_Wrapper">
        <form id="partForm" class="col s12" action="/addPart" method="POST">
            <div class="row">
                <label for="xQM_No">xQM No</label>
                <input name="xQM_No" id="xQM_No" type="number" class="validate">
              </div>
              <div class="row">
                <label for="Warranty_No">Warranty No</label>
                <input name="warranty_No" id="Warranty_No" type="text">
              </div>
              <div class="row">
                <label for="Serial_No">Serial Number</label>
                <input name="serial_No" id="Serial_No" type="text" class="validate">
              </div>
              <div class="row">
                <label for="date_of_sale">Date of Sale</label>
                <input name="date_of_sale" id="date_of_sale" type="text" class="datepicker">
              </div>
              <div class="row">
                <label for="date_of_failure">Date of Failure</label>
                <input name="date_of_failure" id="date_of_failure" type="text" class="datepicker">
              </div>
              <div class="row">
                <label for="Part_No">Part No</label>
                <input name="part_No" id="Part_No" type="text" class="validate">
              </div>
              <div class="row">
                <label for="Comments">Comments</label>
                <input name="comments" id="Comments" type="text">
              </div>
              <div class="row">
                <label>Sent to Manufacture</label>
                <select name="sent_to_manufacture" class="select" id="Sent_to_Manufacture">
                    <option value=false>No</option>
                    <option value=true>Yes</option>
                </select>
             </div>
             <div class="row">
                <label for="date_raised">Date Raised</label>
                <input name="date_raised" id="date_raised" type="text" class="datepicker">
              </div>
              <button id="partButton" class="waves-effect waves-light btn" type="submit">Add Part</button>
        </form>
    </div>
    </div>
      <table id="content_table">
        <tbody>
          <tr><th>id</th><th>xQM_No</th><th>Warranty_No</th><th>Serial_No</th><th>Date of Sale</th><th>Date of Failure</th><th>Part No</th><th>Comments</th><th>Sent_to_manufacture</th><th>Date Added</th><th></th></tr>
        </tbody>
        </table>
      </div>
    </main>
  </body>
</html>


 <!-- Compiled and minified JavaScript -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>